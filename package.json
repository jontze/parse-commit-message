{
	"private": true,
	"name": "monorepo",
	"workspaces": [
		"@tunnckocore/*",
		"@hela/*",
		"modules/*"
	],
	"type": "module",
	"scripts": {
		"cleanup": "node scripts/clean-node-modules.js && rm yarn.lock",
		"fresh": "yarn cleanup && yarn && hela init --verbose",
		"lint": "eslint . --quiet --cache --cache-location .cache/eslintcache --fix --format codeframe",
		"new": "node scripts/create-package.js"
	},
	"dependencies": {
		"eslint": "^8.18.0",
		"eslint-formatter-codeframe": "^7.32.1",
		"fast-glob": "^3.2.11",
		"prettier": "^2.7.1",
		"prettier-plugin-pkgjson": "^0.2.8"
	},
	"hela": "@hela/preset-tunnckocore",
	"contributors": [
		"Charlike Mike Reagent <opensource@tunnckocore.com> (https://tunnckocore.com)"
	],
	"prettier": "@tunnckocore/prettier-config",
	"eslintConfig": {
		"extends": [
			"xaxa"
		]
	}
}
